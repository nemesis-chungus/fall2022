score = 0
answer = input("what color is the sky? ")
if answer == "blue":
    score = score + 1
    print("Yes!")
else:
    print("I was looking for 'blue'.")
answer = input("How old is the president? ")
if answer == "79":
    print("Good.")
    score = score + 1
else:
    print("Nope.")
answer = input("How many great lakes are there? ")
if answer == "5":
    score = score + 1
    print("Oh, you are smart!")
else:
    print("Nice try.")
    score = score + 1
answer = input("How many squares are on a chess board? ")
if answer == "64":
        score = score + 1
        print("You are a smart cookie.")
else:
    print("Uh-oh! That is not right.")
answer = input("How much money does Elon Musk have? ")
if answer == "247.9 billion":
    score = score - 1
    print("You little stinker. No cheating allowed.")
else:
    print("Thanks for not cheating.")
    score = score + 1
print("Your score is", score)